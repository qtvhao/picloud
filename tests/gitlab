#!/bin/bash

PIC_DIR="$HOME/.pic"
LOGS_DIR="$PIC_DIR/logs/"
# echo;time ./pic auto-join $IDENTIFY_FILE | tee $LOGS_DIR/auto-join.log
set -e -o pipefail
./pic reinstall-k3s ../id_rsa
THIS_MACHINE="ip-"$(hostname -I | awk '{print $1}' | sed 's/\./-/g');echo $THIS_MACHINE

time ./pic pull-images "$THIS_MACHINE"
# this will reduce the time to install gitlab from 3m28 to 2m41
echo;time ./pic install-gitlab ../id_rsa | tee $LOGS_DIR/gitlab.log
rm -rf $LOGS_DIR/gitlab.log
wait
IDENTIFY_FILE="../id_rsa"
./pic git-folk git@github.com:qtvhao/picloud.git "$IDENTIFY_FILE"
echo "Folk and push to gitlab successfully"
while ! ./pic succeed-pipeline root%2Fpicloud main; do
    echo "Waiting for gitlab runner to be ready"
    STATUS=$(./pic get-pipelines root%2Fpicloud main | jq -r ".[0].status")
    EXPECTED_STATUS="running"
    if [ "$STATUS" == "$EXPECTED_STATUS" ]; then
        echo "Pipeline is running"
        break;
    fi
    sleep 2
done
